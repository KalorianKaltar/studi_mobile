<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <TextView
        android:id="@+id/medecinPrescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="#000"/>

    <LinearLayout
        android:id="@+id/medic_poso_prescriptioon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/medecinPrescription" >

        <TextView
            android:id="@+id/medicamentPrescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/posologiePrescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="10dp"
            android:textColor="#000"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dates_prescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/medic_poso_prescriptioon" >

        <TextView
            android:id="@+id/labelDateDebutPrescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="#000"
            android:text="Du "/>

        <TextView
            android:id="@+id/dateDebutPrescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/labelDateFinPrescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="#000"
            android:text="Au "/>

        <TextView
            android:id="@+id/dateFinPrescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="#000"/>

    </LinearLayout>
</RelativeLayout>